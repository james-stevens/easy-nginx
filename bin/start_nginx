#! /bin/sh

cp -a /usr/local/nginx/ /run
mkdir /run/nginx/ca
chmod 700 /run/nginx
chown -R nginx: /run/nginx

mkdir /opt/data/htdocs
chown -R nginx: /opt/data/htdocs
chmod 755 /opt/data/htdocs

/usr/local/bin/update_pems
/usr/local/bin/remake_conf

. /usr/local/bin/set_conf

/usr/sbin/nginx -t -c ${conf}

exec /usr/sbin/nginx -c ${conf} -g "daemon off;" >/tmp/nginx.log 2>&1
