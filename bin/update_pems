#! /bin/sh

apk add -u x-local-certs

src="/var/lib/pems"
dst="/etc/nginx/ca/"

for file in ${src}/*.pem
do
	if test ${file} -nt ${dst}/${file} -o ! -f ${dst}/${file}
		then
			cp -a ${src}/*.pem ${dst}
			chown -Rnginx: ${dst}
			chmod 400 ${dst}/*
			killall -HUP nginx
			exit 0
		fi
done

exit 0
